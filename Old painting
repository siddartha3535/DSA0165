#include<iostream>
using namespace std;
int main()
{ 
    int a,b,c,d;
    cout<<"enter the years of painting:";
    cin>>a;
    cout<<"enter the years of painting:";
    cin>>b;
    cout<<"enter the years of painting:";
    cin>>c;
    cout<<"enter the years of painting:";
    cin>>d;
    if(a>=b && a>=c && a>=d)
    {
        cout<<a<<"is the oldest painting "<<endl;
    }
    else if(b>=a && b>+c && b>=d)
    {
          cout<<b<<"is the oldest painting" <<endl;
    }
    else if(c>=a && c>=b && c>=d)
    {
        cout<<c<<"is the oldest painting"<<endl;
    }
     else
    {
        cout<<d<<"is the oldest painting"<<endl;
    }
    
}
